generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String           @id @default(uuid())
  supabase_user_id String           @unique
  email            String           @unique
  created_at       DateTime         @default(now())
  conversations    Conversation[]
  journalEntries   JournalEntry[]
  savedScriptures  SavedScripture[]
}

model Conversation {
  id         String     @id @default(uuid())
  user_id    String
  title      String
  created_at DateTime   @default(now())
  updated_at DateTime   @updatedAt
  user       User       @relation(fields: [user_id], references: [id])
  messages   Message[]
}

model Message {
  id               String       @id @default(uuid())
  conversation_id  String
  role             String
  content          String
  created_at       DateTime     @default(now())
  metadata_json    Json?
  conversation     Conversation @relation(fields: [conversation_id], references: [id])
}

model JournalEntry {
  id         String   @id @default(uuid())
  user_id    String
  title      String
  content    String
  created_at DateTime @default(now())
  user       User     @relation(fields: [user_id], references: [id])
}

model SavedScripture {
  id          String   @id @default(uuid())
  user_id     String
  reference   String
  translation String
  text        String
  created_at  DateTime @default(now())
  user        User     @relation(fields: [user_id], references: [id])
}

model BibleVerse {
  id          String   @id @default(uuid())
  translation String   @default("WEB")
  book        String
  chapter     Int
  verse       Int
  text        String

  @@unique([translation, book, chapter, verse])
  @@index([translation, book, chapter])
  @@index([translation, book, chapter, verse])
}
